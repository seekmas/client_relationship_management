{% extends "SimAppBundle::layouts.html.twig" %}


{% block title %}SimAppBundle:Linkman:home{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-md-12">

            <div class="page-header">
                <h2>{{ 'twig.connect.edit.connect_list' | trans | raw }}
                    <small>{{ connect.name }}</small>
                </h2>
            </div>
        </div>
    </div>

    <div class="row">
            <div class="col-md-6">
                <h3>
                    {{ 'twig.connect.edit.contact_way' | trans | raw }}
                    <small><a href="{{ url('connect_update' , {'connect_id' : connect.id}) }}">{{ 'twig.update' | trans | raw }}</a></small>
                </h3>

                <table class="table">
                    <tr>
                        <td>{{ 'label.connect.name' | trans | raw }}</td>
                        <td>{{ connect.name }}</td>
                    </tr>

                    {% if connect.email %}
                    <tr>
                        <td>{{ 'label.connect.email' | trans | raw }}</td>
                        <td>{{ connect.email }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.qq %}
                    <tr>
                        <td>{{ 'label.connect.qq' | trans | raw }}</td>
                        <td>{{ connect.qq }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.phone %}
                    <tr>
                        <td>{{ 'label.connect.phone' | trans | raw }}</td>
                        <td>{{ connect.phone }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.mobile %}
                    <tr>
                        <td>{{ 'label.connect.mobile' | trans | raw }}</td>
                        <td>{{ connect.mobile }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.fax %}
                    <tr>
                        <td>{{ 'label.connect.fax' | trans | raw }}</td>
                        <td>{{ connect.fax }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.weibo %}
                    <tr>
                        <td>{{ 'label.connect.weibo' | trans | raw }}</td>
                        <td>{{ connect.weibo }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.twitter %}
                    <tr>
                        <td>{{ 'label.connect.twitter' | trans | raw }}</td>
                        <td>{{ connect.twitter }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.facebook %}
                    <tr>
                        <td>{{ 'label.connect.facebook' | trans | raw }}</td>
                        <td>{{ connect.facebook }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.linkedin %}
                    <tr>
                        <td>{{ 'label.connect.linkedin' | trans | raw }}</td>
                        <td>{{ connect.linkedin }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.address %}
                    <tr>
                        <td>{{ 'label.connect.address' | trans | raw }}</td>
                        <td>{{ connect.address }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.blog %}
                    <tr>
                        <td>{{ 'label.connect.blog' | trans | raw }}</td>
                        <td>{{ connect.blog }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.website %}
                    <tr>
                        <td>{{ 'label.connect.website' | trans | raw }}</td>
                        <td>{{ connect.website }}</td>
                    </tr>
                    {% endif %}

                    {% if connect.description %}
                    <tr>
                        <td>{{ 'label.connect.description' | trans | raw }}</td>
                        <td>{{ connect.description }}</td>
                    </tr>
                    {% endif %}

                </table>

            </div>

            <div class="col-md-6">
            <div class="row">

            <div class="col-md-12">
                <h3>
                    {{ 'twig.connect.edit.profile' | trans | raw }}
                    <small><a href="{{ url('connect_fixed' , {'connect_id' : connect.id}) }}">{{ 'twig.update' | trans | raw }}</a></small>
                </h3>


                <table class="table">

                    {% if fixed.gender %}
                    <tr>
                        <td>{{ 'label.fixed.gender.name' | trans | raw }}</td>
                        <td>
                            {% if fixed.gender == 1 %}
                                {{ 'label.fixed.gender.male' | trans | raw }}
                            {% elseif fixed.gender == 2 %}
                                {{ 'label.fixed.gender.female' | trans | raw }}
                            {% endif %}</td>
                    </tr>
                    {% endif %}

                    {% if fixed.age %}
                    <tr>
                        <td>{{ 'label.fixed.age' | trans | raw }}</td>
                        <td>{{ fixed.age }}</td>
                    </tr>
                    {% endif %}

                    {% if fixed.work %}
                    <tr>
                        <td>{{ 'label.fixed.work' | trans | raw }}</td>
                        <td>{{ fixed.work }}</td>
                    </tr>
                    {% endif %}

                    {% if fixed.education %}
                    <tr>
                        <td>{{ 'label.fixed.education.name' | trans | raw }}</td>
                        <td>{{ fixed.education }}</td>
                    </tr>
                    {% endif %}

                    {% if fixed.income %}
                    <tr>
                        <td>{{ 'label.fixed.income' | trans | raw }}</td>
                        <td>{{ fixed.income }}</td>
                    </tr>
                    {% endif %}

                    {% if fixed.value %}
                    <tr>
                        <td>{{ 'label.fixed.value.name' | trans | raw }}</td>
                        <td>{{ fixed.value }}</td>
                    </tr>
                    {% endif %}

                    {% if fixed.value %}
                    <tr>
                        <td>{{ 'label.fixed.relationship.name' | trans | raw }}</td>
                        <td>{{ fixed.relationship }}</td>
                    </tr>
                    {% endif %}

                    {% for fluent in fixed.fluent %}
                        <tr>
                            <td>{{ fluent.subject }}</td>
                            <td>{{ fluent.value }}</td>
                        </tr>
                    {% endfor %}
                </table>

            </div>


        <div class="col-md-12">

            <h3>{{ 'twig.connect.edit.related_projects' | trans | raw }}</h3>

            {% for project in  connect.project %}
            <table class="table">

                <tr>
                    <td width="40%">{{ 'twig.connect.edit.project_name' | trans | raw }}</td>
                    <td width="60%"><h4><a href="{{ url('edit_project' , {'project_id' : project.id}) }}">{{ project | raw }}</a></h4></td>
                </tr>

                <tr>
                    <td>{{ 'twig.connect.edit.project_payment' | trans | raw }}</td>
                    <td><i class="fa fa-rmb"></i> {{ project.contactPayment }}</td>
                </tr>

                <tr>
                    <td>{{ 'twig.connect.edit.project_signed_at' | trans | raw }}</td>
                    <td> {{ project.signAt | date('Y-m-d') }}</td>
                </tr>

                <tr>
                    <td>{{ 'twig.connect.edit.project_started_at' | trans | raw }}</td>
                    <td>{{ project.startAt | date('Y-m-d') }}</td>
                </tr>

                <tr>
                    <td>{{ 'twig.connect.edit.project_ended_at' | trans | raw }}</td>
                    <td>{{ project.endAt | date('Y-m-d') }}</td>
                </tr>

            </table>
            {% endfor %}

        </div>
        </div>
        </div>

    </div>

{% endblock %}
