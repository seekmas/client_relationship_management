{% extends "SimAppBundle::layouts.html.twig" %}


{% block title %}SimAppBundle:Linkman:home{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="page-header">
                <h2>{{ 'twig.connect.home.connect_list' | trans | raw }}</h2>
            </div>

            <ul>

                {% for connect in connects %}

                    <li>

                       <a href="{{ url('connect_edit' , {'connect_id':connect.id}) }}">
                           <strong>{{ connect.name }}</strong>
                       </a>

                            {% if connect.email %}[ {{ 'twig.connect.home.email' | trans | raw }}: {{ connect.email }} ]{% endif %}
                            {% if connect.description %}[ {{ 'twig.connect.home.description' | trans | raw }}: {{ connect.description }} ]{% endif %}
                    </li>

                {% endfor %}
            </ul>

        </div>


    </div>

{% endblock %}
