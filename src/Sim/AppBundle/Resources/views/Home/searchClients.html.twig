{% extends "SimAppBundle::layouts.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-md-6">
            {{ form(form) }}
        </div>

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Search Results ( {{ list | length }} )</div>
                <div class="list-group">
                    {% for client in list %}
                        <a class="list-group-item" href="{{ url('edit_client' , {'client_id': client.id}) }}">
                            <h4 class="list-group-item-heading">{{ client }}</h4>
                            <p class="list-group-item-text">{{ client.description }}</p>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


{% endblock %}