{% extends "SimAppBundle::layouts.html.twig" %}

{% block title %}SimAppBundle:Linkman:home{% endblock %}

{% block body %}
    <div class="page-header">
        <h2>项目</h2>
    </div>

    <div class="row">

        <div class="col-md-8">

            <ul>
            {% set filter = "" %}
            {% set ul_flag = 0 %}


            {% for project in projects %}


                {% if project.dateFilter != filter %}

                    <div class="page-header">
                        <h2>{{ project.dateFilter }}</h2>
                    </div>

                {% endif %}


                <li>{{ project.createdAt | date('Y-m-d') }} <a href="{{ url('edit_project' , {'project_id' : project.id}) }}">{{ project }}</a></li>

                {% set filter = project.dateFilter %}

            {% endfor %}
            </ul>
        </div>

    </div>

{% endblock %}
